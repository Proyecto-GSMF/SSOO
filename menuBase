#!/bin/bash
opc=0
function menu (){
  echo "Opcion 1"
  echo "Opcion 2"
  echo "Opcion 3"
  echo "Opcion 4"
}

while [$opc -le 5]
do
  menu
  read opc
  case $opc in
  1)
    echo "Opcion 1";;
  2)
    echo "Opcion 2";;
  3)
    echo "Opcion 3";;
  4)
    echo "Salir"; 
    break;;
  *)
    echo "Opcion Incorrecta";;
  esac
done
~
~

